<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saturn.Views.AccountPage"
             Title="AccountPage"
             Shell.NavBarIsVisible="False"
             >
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                />

            <Label 
                x:Name="versionText"
                TextColor="#999999"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Margin="0, 20, 0, 20"
                FontAttributes="Bold"
                FontSize="16"
                />

            <Button Text="Выйти" Command="{Binding SignOutCommand}" Margin="10" BackgroundColor="{x:StaticResource Green40}" VerticalOptions="Center"/>



            <Button Clicked="OnStartServiceClicked" Text="Start" VerticalOptions="Center" Margin="10, 0, 10, 0"/>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>