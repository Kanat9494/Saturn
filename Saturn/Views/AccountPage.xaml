<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saturn.Views.AccountPage"
             Title="AccountPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{x:StaticResource White78}"
             >
    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout HeightRequest="350" Background="White">
                <Border HorizontalOptions="Center" HeightRequest="100" WidthRequest="100" VerticalOptions="Center">
                    <Image Source="{Binding CurrentUser.ProfileImageSource}" />
                </Border>

            </VerticalStackLayout>

            <Label 
                x:Name="versionText"
                TextColor="#505050"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Margin="0, 20, 0, 20"
                FontAttributes="Bold"
                FontSize="16"
                />

            <Button Text="Выйти" Command="{Binding SignOutCommand}" Margin="10" BackgroundColor="{x:StaticResource Green40}" VerticalOptions="Center"/>



            <Button Clicked="OnStartServiceClicked" Text="Start" VerticalOptions="Center" Margin="10, 0, 10, 0"/>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>